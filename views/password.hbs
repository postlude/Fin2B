<script>
    $(document).ready(function(){
        var check_btn = $('#btn');

        check_btn.click(function(){
            var pwd = $('#pwd').val();

            $.ajax({
                url: '/password/check',
                type: 'POST',
                data: {'pwd' : pwd}
            })
            .done(function(result){
                if(result){
                    alert('올바른 비밀번호입니다.')
                }else{
                    alert('올바르지 않은 비밀번호입니다.')
                }
            })
            .fail(function(err){
                console.log(err);
            });
        });
    });
</script>

<div class="form-group">
    <label for="pwd">Password</label>
    <input type="password" class="form-control" id="pwd" name="pwd" pattern="^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])(?=.*?[!@#$%^&+=]).{8,}$">
    {{!-- <input type="password" class="form-control" id="pwd" name="pwd"> --}}
</div>
<div class="form-group">
    <button type="button" class="btn btn-default btn-block" id="btn" >Check</button>
</div>

