<script>
    $(document).ready(function(){
        var check_btn = $('#btn');

        check_btn.click(function(){
            var pibo_num = $('#pibo_num').val();

            $.ajax({
                url: '/fibonacci',
                type: 'POST',
                data: {'piboNum' : pibo_num}
            })
            .done(function(result){
                $('#print_pibo').html(result.inputNum + '번째 피보나치 수는 ' + result.fiboNum + '입니다.');
            })
            .fail(function(err){
                console.log(err);
            });
        });
    });
</script>

<div class="form-group">
    <label for="pibo_num">출력할 n번째 피보나치 수</label>
    <input type="number" class="form-control" id="pibo_num" name="pibo_num">
</div>
<div class="form-group">
    <button type="button" class="btn btn-default btn-block" id="btn" >출력</button>
</div>

<div id="print_pibo"></div>